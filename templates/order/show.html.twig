<h1>Заказ #{{ order.id }}</h1>
<p><strong>Клиент:</strong> {{ order.customer }}</p>
<p><strong>Итого:</strong> {{ order.totalPrice }} ₽</p>

<h5>Блюда:</h5>
<ul>
    {% for dish in order.dishes %}
        <li>{{ dish.name }} — {{ dish.price }} ₽</li>
    {% endfor %}
</ul>

<h5>Документ:</h5>
{% if order.documentName %}
    <a href="{{ vich_uploader_asset(order) }}" target="_blank" class="btn btn-info">Скачать {{ order.documentName }}</a>
{% else %}
    <p><em>Нет документа</em></p>
{% endif %}