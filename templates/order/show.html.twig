<h5>Документы ({{ order.documents|length }})</h5>
{% if order.documents|length > 0 %}
    <ul class="list-group">
        {% for doc in order.documents %}
            <li class="list-group-item d-flex justify-content-between">
                <a href="{{ vich_uploader_asset(doc) }}" target="_blank">{{ doc.fileName }}</a>
                <form method="post" action="{{ path('app_order_delete_document', {id: doc.id}) }}" style="display:inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete-document' ~ doc.id) }}">
                    <button class="btn btn-sm btn-danger">Удалить</button>
                </form>
            </li>
        {% endfor %}
    </ul>
{% else %}
    <p><em>Нет документов</em></p>
{% endif %}