{# templates/order/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Редактировать заказ{% endblock %}

{% block body %}
    <h1>Редактировать заказ</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        {% if order.documentName %}
            <p><strong>Текущий документ:</strong> {{ order.documentName }} ({{ (order.documentSize / 1024)|round(2) }} KB)</p>
        {% endif %}

        <button class="btn btn-primary">Сохранить</button>
    {{ form_end(form) }}

    <a href="{{ path('app_order_index') }}" class="btn btn-secondary">Назад</a>

    {% if order.documentName %}
        <hr>
        <form method="post" action="{{ path('app_order_delete_document', {'id': order.id}) }}" onsubmit="return confirm('Удалить документ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete-document' ~ order.id) }}">
            <button class="btn btn-danger">Удалить документ</button>
        </form>
    {% endif %}
{% endblock %}