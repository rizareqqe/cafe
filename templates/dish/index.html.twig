{% extends 'base.html.twig' %}

{% block body %}
<h1>Блюда</h1>
<a href="{{ path('app_dish_new') }}" class="btn btn-success">Добавить</a>

<div class="row mt-4">
    {% for dish in dishes %}
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5>{{ dish.name }}</h5>
                    <p>{{ dish.price }} ₽</p>
                    {% if dish.imageName %}
                        <p><strong>Фото:</strong> <a href="{{ vich_uploader_asset(dish) }}" target="_blank">{{ dish.imageName }}</a></p>
                    {% else %}
                        <p><em>Фото не прикреплено</em></p>
                    {% endif %}
                    <a href="{{ path('app_dish_edit', {id: dish.id}) }}" class="btn btn-sm btn-warning">Редактировать</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}