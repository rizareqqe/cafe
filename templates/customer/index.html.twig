{% extends 'base.html.twig' %}
{% block body %}
<h1 style="margin-top:0;">Клиенты</h1>

<a href="{{ path('app_customer_new') }}" style="margin-bottom:15px; display:inline-block; color:#007bff;">
    + Добавить клиента
</a>

<ul style="list-style:none; padding:0;">
    {% for customer in customers %}
        <li style="padding:8px; border-bottom:1px solid #eee;">
            {{ customer.name }} — {{ customer.phone }}
            <a href="{{ path('app_customer_edit', {id: customer.id}) }}" style="margin-left:10px; color:#007bff;">изменить</a>
        </li>
    {% else %}
        <li style="padding:8px; color:#999;">Нет клиентов</li>
    {% endfor %}
</ul>
{% endblock %}